
<div class="container">
  <h2 class = "topic_one"><%= @post.title %></h2>
  <p><%= @post.body%></p>
  <p>Posted <%= time_ago_in_words(@post.created_at)%> ago</p>
  <button class="edit"><%= link_to "Edit", edit_post_path(@post) %></button>
  <button class="delete"><%= link_to "Delete", post_path(@post),
    method: :delete, data: {confirm: "Are You sure?"} %></button>
</div>

<hr>

<div class="container">
  <%= form_with(model: [@post, @comment], local: true) do |f| %>

  <% if @comment.errors.any? %>

  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
    <li class="color_text"><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
     <h3><strong>Comment</strong></h3>
     <div>

       <%= f.text_area(
       :body,
       cols: 50,
       rows: 5,
       placeholder: "what's on your mind?"
       ) %>

     </div>

     <div><%= f.submit "Submit" %></div>

  <% end %>
</div>


<% @comments.each do |comment| %>
 <div class = "container">
    <ul>
      <li>
         <p>
            <%= comment.body%>
         </p>
         <p>
          <small>
            <button class="delete_one"><%= link_to "Delete", post_comment_path(@post, comment),
              method: :delete, data: {confirm: "Are You sure?"} %></button>
          </small>
          <small>
            Commented <%=time_ago_in_words(comment.created_at)%> ago
          </small>
        </p>
      </li>
    </ul>
 </div>
<% end %>
